<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.SearchActivity">

    <RelativeLayout
        android:layout_width="316dp"
        android:layout_height="305dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.342">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="@string/fill_form"
            android:textSize="30sp" />

        <EditText
            android:id="@+id/cityInput"
            android:layout_width="220dp"
            android:layout_height="50dp"
            android:layout_alignBottom="@id/textView"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="-89dp"
            android:ems="10"
            android:inputType="text"
            android:hint="@string/hint_city" />

        <Button
            android:id="@+id/searchShowButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/comboBox"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="-69dp"
            android:onClick="executeSearch"
            android:text="@string/button_show" />

        <Spinner
            android:id="@+id/comboBox"
            android:layout_width="220dp"
            android:layout_height="50dp"
            android:layout_alignBottom="@id/cityInput"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="-72dp" />


    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>